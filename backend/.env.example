# ============================================
# AI CONTENT INTELLIGENCE SYSTEM CONFIGURATION
# ============================================
# Copy this file to .env and add your API keys

# DATABASE CONFIGURATION
# Use SQLite for development, PostgreSQL for production
DATABASE_URL=sqlite:///./test.db
# DATABASE_URL=postgresql://postgres:postgres@postgres:5432/content_intelligence

# REDIS CONFIGURATION (for cache & task queue)
REDIS_URL=redis://redis:6379/0

# API KEYS - ADD YOUR KEYS HERE
# ============================================

# OPENAI API KEY (for Whisper transcription)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# ANTHROPIC API KEY (for Claude content analysis)
# Get from: https://console.anthropic.com
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# APIFY API KEY (for Instagram scraping - OPTIONAL)
# Get from: https://console.apify.com
APIFY_API_KEY=your_apify_api_key_here

# ASSEMBLYAI API KEY (for premium transcription - OPTIONAL)
# Get from: https://www.assemblyai.com
ASSEMBLYAI_API_KEY=your_assemblyai_api_key_here

# TRANSCRIPTION SERVICE CONFIGURATION
# Choose ONE: whisper_api, local_whisper, or assemblyai
TRANSCRIPTION_SERVICE=whisper_api

# For Local Whisper settings
WHISPER_MODEL_SIZE=medium  # tiny, base, small, medium, large
WHISPER_DEVICE=auto  # auto, cpu, cuda
WHISPER_LANGUAGE=en

# SECURITY
# Generate with: openssl rand -hex 32
SECRET_KEY=your-secret-key-change-this-in-production

# JWT Token expiration (minutes)
ACCESS_TOKEN_EXPIRE_MINUTES=30

# APPLICATION
APP_NAME=AI Content Intelligence System
DEBUG=False

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# INSTAGRAM SCRAPING SETTINGS
MIN_VIEW_THRESHOLD=50000
MIN_ENGAGEMENT_RATE=4.0

# FILE STORAGE
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=104857600  # 100MB in bytes

# GOOGLE SHEETS (OPTIONAL)
GOOGLE_SHEETS_CREDENTIALS=
